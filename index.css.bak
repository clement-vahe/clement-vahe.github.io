body {
  font-family: Arial, sans-serif;
  margin: 0;
  padding: 20px;
  background-color: #e6e8eb;
  color: #333;
  line-height: 1.6;
}
#presentation{
	text-align : justify;	
}

header {
  text-align: center;
  margin-bottom: 40px;
}

header h1 {
  font-size: 2.5em;
  margin: 0;
  color: #2c3e50;
}

header p {
  font-size: 1.2em;
  color: #34495e;
}

section {
  margin-bottom: 40px;
  max-width: 800px;
  margin-left: auto;
  margin-right: auto;
  background: white;
  padding: 20px;
  padding-top : 1px;
  border-radius: 8px;
  box-shadow: 0 0 8px rgba(0,0,0,0.1);
}

h2 {
  color: #2980b9;
  margin-bottom: 5px;
  border-bottom: 2px solid #2980b9;
  padding-bottom: 5px;
}

h3 {
  color: #34495e;
  margin-top: 20px;
}

ul {
  list-style-type: square;
  padding-left: 20px;
}

a {
  color: #2980b9;
  text-decoration: none;
}

a:hover {
  text-decoration: underline;
}

footer {
  text-align: center;
  color: #95a5a6;
  font-size: 0.9em;
  padding: 10px;
  border-top: 1px solid #ddd;
  margin-top: 40px;
}

#gimeole {
      display: flex;
      flex-wrap: wrap;
      gap: 20px;
      align-items: right;
    }
#gimeole .texte {
      flex: 1 1 70%;
    }
#gimeole .image {
      flex: 1 1 20%;
    }
#gimeole .image img {
      max-width: 50%;
	  max-height : 200px;
      height: auto;
      border-radius: 8px;
    }